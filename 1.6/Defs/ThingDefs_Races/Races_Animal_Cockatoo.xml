<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!-- Cockatoo -->
  <ThingDef ParentName="BB_BirdBase">
    <defName>BB_Cockatoo</defName>
    <label>cockatoo</label>
    <description>A very intelligent parrot with distinctive crestfeathers. Their strong beak is able to crack nuts.</description>
    <statBases>
      <MoveSpeed>5</MoveSpeed>
      <MarketValue>200</MarketValue>
      <ComfyTemperatureMin>0</ComfyTemperatureMin>
      <Wildness>0.4</Wildness>
    </statBases>
    <race>
      <body>Bird</body>
      <predator>false</predator>
      <baseBodySize>0.3</baseBodySize>
      <baseHungerRate>0.15</baseHungerRate>
      <baseHealthScale>0.42</baseHealthScale>
      <foodType>VegetarianRoughAnimal</foodType>
      <wildBiomes>
        <TropicalRainforest>0.9</TropicalRainforest>
      </wildBiomes>
      <trainability>Advanced</trainability>
      <useMeatFrom>Chicken</useMeatFrom>
      <litterSizeCurve>
        <points>
          <li>(0.5, 0)</li>
          <li>(1, 1)</li>
          <li>(2, 1.7)</li>
          <li>(3, 0.7)</li>
          <li>(3.5, 0)</li>
        </points>
      </litterSizeCurve>
      <lifeExpectancy>40</lifeExpectancy>
      <lifeStageAges>
        <li>
          <def>AnimalBaby</def>
          <minAge>0</minAge>
          <soundWounded>Pawn_Chick_Call</soundWounded>
          <soundDeath>Pawn_Chick_Call</soundDeath>
          <soundCall>Pawn_Chick_Call</soundCall>
          <soundAngry>Pawn_Chick_Call</soundAngry>
        </li>
        <li>
          <def>AnimalJuvenile</def>
          <minAge>0.15</minAge>
        </li>
        <li>
          <def>AnimalAdult</def>
          <minAge>0.4</minAge>
          <soundWounded>Pawn_Bird_Cockatoo_Call</soundWounded>
          <soundCall>Pawn_Bird_Cockatoo_Call</soundCall>
          <soundAngry>Pawn_Bird_Cockatoo_Call</soundAngry>
        </li>
      </lifeStageAges>
      <soundMeleeHitPawn>Pawn_Melee_SmallScratch_HitPawn</soundMeleeHitPawn>
      <soundMeleeHitBuilding>Pawn_Melee_SmallScratch_HitBuilding</soundMeleeHitBuilding>
      <soundMeleeMiss>Pawn_Melee_SmallScratch_Miss</soundMeleeMiss>
    </race>
    <tradeTags>
      <li>AnimalCommon</li>
    </tradeTags>
    <tools>
      <li>
        <label>talons</label>
        <capacities>
          <li>Scratch</li>
        </capacities>
        <power>5</power>
        <cooldownTime>1.5</cooldownTime>
        <linkedBodyPartsGroup>Feet</linkedBodyPartsGroup>
      </li>
      <li>
        <label>beak</label>
        <capacities>
          <li>Bite</li>
        </capacities>
        <power>6</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>Beak</linkedBodyPartsGroup>
      </li>
      <li>
        <label>head</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>1</power>
        <cooldownTime>20</cooldownTime>
        <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
        <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
        <chanceFactor>0.8</chanceFactor>
        <surpriseAttack>
          <extraMeleeDamages>
            <li>
              <def>Stun</def>
              <amount>14</amount>
            </li>
          </extraMeleeDamages>
        </surpriseAttack>
      </li>
    </tools>
    <comps>
      <li Class="CompProperties_EggLayer">
        <eggUnfertilizedDef>EggCockatooUnfertilized</eggUnfertilizedDef>
        <eggFertilizedDef>EggCockatooFertilized</eggFertilizedDef>
        <eggFertilizationCountMax>1</eggFertilizationCountMax>
        <eggLayIntervalDays>15</eggLayIntervalDays>
        <eggCountRange>3</eggCountRange>
      </li>
    </comps>
  </ThingDef>
  <PawnKindDef ParentName="AnimalKindBase">
    <defName>BB_Cockatoo</defName>
    <label>cockatoo</label>
    <race>BB_Cockatoo</race>
    <combatPower>40</combatPower>
    <ecoSystemWeight>0.3</ecoSystemWeight>
    <flyingAnimationFramePathPrefix>Things/Pawn/Animal/Cockatoo/Cockatoo_flight_</flyingAnimationFramePathPrefix>
    <flyingAnimationFrameCount>1</flyingAnimationFrameCount>
    <lifeStages>
      <li>
        <label>cockatoo</label>
        <bodyGraphicData>
          <texPath>Things/Pawn/Animal/Cockatoo/Cockatoo</texPath>
          <drawSize>1</drawSize>
        </bodyGraphicData>
        <dessicatedBodyGraphicData>
          <texPath>Things/Pawn/Animal/Dessicated_Kestrel</texPath>
          <drawSize>1</drawSize>
        </dessicatedBodyGraphicData>
      </li>
      <li>
        <bodyGraphicData>
          <texPath>Things/Pawn/Animal/Cockatoo/Cockatoo</texPath>
          <drawSize>1.3</drawSize>
        </bodyGraphicData>
        <dessicatedBodyGraphicData>
          <texPath>Things/Pawn/Animal/Dessicated_Kestrel</texPath>
          <drawSize>1.3</drawSize>
        </dessicatedBodyGraphicData>
      </li>
      <li>
        <bodyGraphicData>
          <texPath>Things/Pawn/Animal/Cockatoo/Cockatoo</texPath>
          <drawSize>1.4</drawSize>
          <shadowData>
            <volume>(0.25, 0.3, 0.25)</volume>
            <offset>(0,0,-0.15)</offset>
          </shadowData>
        </bodyGraphicData>
        <dessicatedBodyGraphicData>
          <texPath>Things/Pawn/Animal/Dessicated_Owl</texPath>
          <drawSize>1.4</drawSize>
        </dessicatedBodyGraphicData>
      </li>
    </lifeStages>
  </PawnKindDef>
</Defs>

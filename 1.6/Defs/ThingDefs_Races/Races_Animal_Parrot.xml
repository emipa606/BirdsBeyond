<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!-- Parrot -->
  <ThingDef ParentName="BB_BirdBase">
    <defName>BB_Parrot</defName>
    <label>Parrot</label>
    <description>A treasured avian companion for pirates and collectors alike. The parrot is very well known for it's intelligence, strong beak and ability to mimic speech.</description>
    <statBases>
      <MoveSpeed>3</MoveSpeed>
      <MarketValue>200</MarketValue>
      <LeatherAmount>21</LeatherAmount>
      <ComfyTemperatureMin>-15</ComfyTemperatureMin>
      <FilthRate>2.8</FilthRate>
      <Wildness>0.4</Wildness>
    </statBases>
    <race>
      <body>Bird</body>
      <predator>false</predator>
      <maxPreyBodySize>0.3</maxPreyBodySize>
      <baseHungerRate>0.30</baseHungerRate>
      <baseBodySize>0.3</baseBodySize>
      <baseHealthScale>0.5</baseHealthScale>
      <foodType>VegetarianRoughAnimal</foodType>
      <leatherDef>Leather_Bird</leatherDef>
      <trainability>Advanced</trainability>
      <wildBiomes>
        <TropicalRainforest>0.8</TropicalRainforest>
      </wildBiomes>
      <mateMtbHours>8</mateMtbHours>
      <useMeatFrom>Chicken</useMeatFrom>
      <lifeExpectancy>15</lifeExpectancy>
      <lifeStageAges>
        <li>
          <def>AnimalBabyTiny</def>
          <minAge>0</minAge>
          <soundWounded>Pawn_Chick_Call</soundWounded>
          <soundDeath>Pawn_Chick_Call</soundDeath>
          <soundCall>Pawn_Chick_Call</soundCall>
          <soundAngry>Pawn_Chick_Call</soundAngry>
        </li>
        <li>
          <def>AnimalJuvenile</def>
          <minAge>0.12</minAge>
        </li>
        <li>
          <def>AnimalAdult</def>
          <minAge>0.2</minAge>
          <soundWounded>Pawn_Bird_Parrot_Call</soundWounded>
          <soundDeath>Pawn_Bird_Parrot_Call</soundDeath>
          <soundCall>Pawn_Bird_Parrot_Call</soundCall>
          <soundAngry>Pawn_Bird_Parrot_Call</soundAngry>
        </li>
      </lifeStageAges>
      <soundMeleeHitPawn>Pawn_Melee_SmallScratch_HitPawn</soundMeleeHitPawn>
      <soundMeleeHitBuilding>Pawn_Melee_SmallScratch_HitBuilding</soundMeleeHitBuilding>
      <soundMeleeMiss>Pawn_Melee_SmallScratch_Miss</soundMeleeMiss>
    </race>
    <tradeTags>
      <li>AnimalCommon</li>
    </tradeTags>
    <tools>
      <li>
        <label>talons</label>
        <capacities>
          <li>Scratch</li>
        </capacities>
        <power>4</power>
        <cooldownTime>1.5</cooldownTime>
        <linkedBodyPartsGroup>Feet</linkedBodyPartsGroup>
      </li>
      <li>
        <label>beak</label>
        <capacities>
          <li>Bite</li>
        </capacities>
        <power>7</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>Beak</linkedBodyPartsGroup>
      </li>
      <li>
        <label>head</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>1</power>
        <cooldownTime>20</cooldownTime>
        <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
        <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
        <chanceFactor>0.8</chanceFactor>
        <surpriseAttack>
          <extraMeleeDamages>
            <li>
              <def>Stun</def>
              <amount>14</amount>
            </li>
          </extraMeleeDamages>
        </surpriseAttack>
      </li>
    </tools>
    <comps>
      <li Class="CompProperties_EggLayer">
        <eggUnfertilizedDef>EggParrotUnfertilized</eggUnfertilizedDef>
        <eggFertilizedDef>EggParrotFertilized</eggFertilizedDef>
        <eggFertilizationCountMax>1</eggFertilizationCountMax>
        <eggLayIntervalDays>15</eggLayIntervalDays>
        <eggCountRange>3</eggCountRange>
      </li>
    </comps>
  </ThingDef>
  <PawnKindDef ParentName="AnimalKindBase">
    <defName>BB_Parrot</defName>
    <label>Parrot</label>
    <race>BB_Parrot</race>
    <combatPower>30</combatPower>
    <ecoSystemWeight>0.30</ecoSystemWeight>
    <flyingAnimationFramePathPrefix>Things/Pawn/Animal/Parrot/Parrot_flight_</flyingAnimationFramePathPrefix>
    <flyingAnimationFrameCount>1</flyingAnimationFrameCount>
    <lifeStages>
      <li>
        <label>chick</label>
        <bodyGraphicData>
          <texPath>Things/Pawn/Animal/Parrot/Parrot</texPath>
          <drawSize>1</drawSize>
        </bodyGraphicData>
        <dessicatedBodyGraphicData>
          <texPath>Things/Pawn/Animal/Dessicated_Kestrel</texPath>
          <drawSize>1</drawSize>
        </dessicatedBodyGraphicData>
      </li>
      <li>
        <bodyGraphicData>
          <texPath>Things/Pawn/Animal/Parrot/Parrot</texPath>
          <drawSize>1.2</drawSize>
        </bodyGraphicData>
        <dessicatedBodyGraphicData>
          <texPath>Things/Pawn/Animal/Dessicated_Kestrel</texPath>
          <drawSize>1.2</drawSize>
        </dessicatedBodyGraphicData>
      </li>
      <li>
        <bodyGraphicData>
          <texPath>Things/Pawn/Animal/Parrot/Parrot</texPath>
          <drawSize>1.5</drawSize>
          <shadowData>
            <volume>(0.3, 0.4, 0.3)</volume>
            <offset>(0,0,-0.05)</offset>
          </shadowData>
        </bodyGraphicData>
        <dessicatedBodyGraphicData>
          <texPath>Things/Pawn/Animal/Dessicated_Kestrel</texPath>
          <drawSize>1.5</drawSize>
        </dessicatedBodyGraphicData>
      </li>
    </lifeStages>
  </PawnKindDef>
</Defs>

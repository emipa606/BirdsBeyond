<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="AnimalThingBase" Name="BB_BirdBase" Abstract="True">
    <statBases>
      <MaxFlightTime>30</MaxFlightTime>
      <FlightCooldown>10</FlightCooldown>
    </statBases>
    <race>
      <body>Bird</body>
      <soundEating>Bird_Eat</soundEating>
      <flightStartChanceOnJobStart>0.15</flightStartChanceOnJobStart>
      <canFlyIntoMap>true</canFlyIntoMap>
      <canLeaveMapFlying>true</canLeaveMapFlying>
    </race>
  </ThingDef>
  <!-- Barn Owl -->
  <ThingDef ParentName="BB_BirdBase">
    <defName>BB_BarnOwl</defName>
    <label>barn owl</label>
    <devNote>owl</devNote>
    <description>A medium-sized owl with a distinctive, heart-shaped face. They are renowned for their eerie, drawn-out shrieking calls. Barn owls prey upon small mammals which they locate with their excellent hearing.</description>
    <statBases>
      <MoveSpeed>4</MoveSpeed>
      <MarketValue>100</MarketValue>
      <ComfyTemperatureMin>-25</ComfyTemperatureMin>
      <Wildness>0.7</Wildness>
    </statBases>
    <race>
      <body>Bird</body>
      <predator>true</predator>
      <baseBodySize>0.4</baseBodySize>
      <maxPreyBodySize>0.3</maxPreyBodySize>
      <baseHungerRate>0.15</baseHungerRate>
      <baseHealthScale>0.42</baseHealthScale>
      <foodType>CarnivoreAnimal</foodType>
      <wildBiomes>
        <TemperateForest>0.3</TemperateForest>
        <BorealForest>0.2</BorealForest>
      </wildBiomes>
      <trainability>Intermediate</trainability>
      <useMeatFrom>Chicken</useMeatFrom>
      <litterSizeCurve>
        <points>
          <li>(0.5, 0)</li>
          <li>(1, 1)</li>
          <li>(2, 1.7)</li>
          <li>(3, 0.7)</li>
          <li>(3.5, 0)</li>
        </points>
      </litterSizeCurve>
      <lifeExpectancy>15</lifeExpectancy>
      <lifeStageAges>
        <li>
          <def>AnimalBaby</def>
          <minAge>0</minAge>
          <soundWounded>Pawn_Chick_Call</soundWounded>
          <soundDeath>Pawn_Chick_Call</soundDeath>
          <soundCall>Pawn_Chick_Call</soundCall>
          <soundAngry>Pawn_Chick_Call</soundAngry>
        </li>
        <li>
          <def>AnimalJuvenile</def>
          <minAge>0.15</minAge>
        </li>
        <li>
          <def>AnimalAdult</def>
          <minAge>0.4</minAge>
          <soundWounded>Pawn_Bird_BarnOwl_Call</soundWounded>
          <soundCall>Pawn_Bird_BarnOwl_Call</soundCall>
          <soundAngry>Pawn_Bird_BarnOwl_Call</soundAngry>
        </li>
      </lifeStageAges>
      <soundMeleeHitPawn>Pawn_Melee_SmallScratch_HitPawn</soundMeleeHitPawn>
      <soundMeleeHitBuilding>Pawn_Melee_SmallScratch_HitBuilding</soundMeleeHitBuilding>
      <soundMeleeMiss>Pawn_Melee_SmallScratch_Miss</soundMeleeMiss>
    </race>
    <tradeTags>
      <li>AnimalCommon</li>
    </tradeTags>
    <tools>
      <li>
        <label>talons</label>
        <capacities>
          <li>Scratch</li>
        </capacities>
        <power>5</power>
        <cooldownTime>1.5</cooldownTime>
        <linkedBodyPartsGroup>Feet</linkedBodyPartsGroup>
      </li>
      <li>
        <label>beak</label>
        <capacities>
          <li>Bite</li>
        </capacities>
        <power>3</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>Beak</linkedBodyPartsGroup>
      </li>
      <li>
        <label>head</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>1</power>
        <cooldownTime>20</cooldownTime>
        <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
        <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
        <chanceFactor>0.8</chanceFactor>
        <surpriseAttack>
          <extraMeleeDamages>
            <li>
              <def>Stun</def>
              <amount>14</amount>
            </li>
          </extraMeleeDamages>
        </surpriseAttack>
      </li>
    </tools>
    <comps>
      <li Class="CompProperties_EggLayer">
        <eggUnfertilizedDef>EggBarnOwlUnfertilized</eggUnfertilizedDef>
        <eggFertilizedDef>EggBarnOwlFertilized</eggFertilizedDef>
        <eggFertilizationCountMax>1</eggFertilizationCountMax>
        <eggLayIntervalDays>15</eggLayIntervalDays>
        <eggCountRange>3</eggCountRange>
      </li>
    </comps>
  </ThingDef>
  <PawnKindDef ParentName="AnimalKindBase">
    <defName>BB_BarnOwl</defName>
    <label>barn owl</label>
    <race>BB_BarnOwl</race>
    <combatPower>40</combatPower>
    <ecoSystemWeight>0.3</ecoSystemWeight>
    <flyingAnimationFramePathPrefix>Things/Pawn/Animal/BarnOwl/BarnOwl_flight_</flyingAnimationFramePathPrefix>
    <flyingAnimationFrameCount>1</flyingAnimationFrameCount>
    <lifeStages>
      <li>
        <label>barn owl</label>
        <bodyGraphicData>
          <texPath>Things/Pawn/Animal/BarnOwl/BarnOwl</texPath>
          <drawSize>1</drawSize>
        </bodyGraphicData>
        <dessicatedBodyGraphicData>
          <texPath>Things/Pawn/Animal/Dessicated_Owl</texPath>
          <drawSize>1</drawSize>
        </dessicatedBodyGraphicData>
      </li>
      <li>
        <bodyGraphicData>
          <texPath>Things/Pawn/Animal/BarnOwl/BarnOwl</texPath>
          <drawSize>1.3</drawSize>
        </bodyGraphicData>
        <dessicatedBodyGraphicData>
          <texPath>Things/Pawn/Animal/Dessicated_Owl</texPath>
          <drawSize>1.3</drawSize>
        </dessicatedBodyGraphicData>
      </li>
      <li>
        <bodyGraphicData>
          <texPath>Things/Pawn/Animal/BarnOwl/BarnOwl</texPath>
          <drawSize>1.4</drawSize>
          <shadowData>
            <volume>(0.25, 0.3, 0.25)</volume>
            <offset>(0,0,-0.15)</offset>
          </shadowData>
        </bodyGraphicData>
        <dessicatedBodyGraphicData>
          <texPath>Things/Pawn/Animal/Dessicated_Owl</texPath>
          <drawSize>1.4</drawSize>
        </dessicatedBodyGraphicData>
      </li>
    </lifeStages>
  </PawnKindDef>
</Defs>

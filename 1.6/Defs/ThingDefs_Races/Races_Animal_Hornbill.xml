<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!-- Hornbill -->
  <ThingDef ParentName="BB_BirdBase">
    <defName>BB_Hornbill</defName>
    <label>hornbill</label>
    <description>This big tropical bird has a very distinctive beak, hence it's name. They are often found roaming forests for fruit-carrying trees.</description>
    <statBases>
      <MoveSpeed>2.1</MoveSpeed>
      <MarketValue>200</MarketValue>
      <LeatherAmount>36</LeatherAmount>
      <ComfyTemperatureMin>-15</ComfyTemperatureMin>
      <FilthRate>3</FilthRate>
      <Wildness>0.7</Wildness>
    </statBases>
    <race>
      <body>Bird</body>
      <predator>false</predator>
      <baseHungerRate>0.20</baseHungerRate>
      <baseBodySize>0.6</baseBodySize>
      <baseHealthScale>1</baseHealthScale>
      <foodType>VegetarianRoughAnimal</foodType>
      <leatherDef>Leather_Bird</leatherDef>
      <trainability>Intermediate</trainability>
      <wildBiomes>
        <TropicalRainforest>0.8</TropicalRainforest>
      </wildBiomes>
      <mateMtbHours>8</mateMtbHours>
      <useMeatFrom>Chicken</useMeatFrom>
      <lifeExpectancy>30</lifeExpectancy>
      <lifeStageAges>
        <li>
          <def>AnimalBabyTiny</def>
          <minAge>0</minAge>
          <soundWounded>Pawn_Chick_Call</soundWounded>
          <soundDeath>Pawn_Chick_Call</soundDeath>
          <soundCall>Pawn_Chick_Call</soundCall>
          <soundAngry>Pawn_Chick_Call</soundAngry>
        </li>
        <li>
          <def>AnimalJuvenile</def>
          <minAge>0.12</minAge>
        </li>
        <li>
          <def>AnimalAdult</def>
          <minAge>0.4</minAge>
        </li>
      </lifeStageAges>
      <soundMeleeHitPawn>Pawn_Melee_SmallScratch_HitPawn</soundMeleeHitPawn>
      <soundMeleeHitBuilding>Pawn_Melee_SmallScratch_HitBuilding</soundMeleeHitBuilding>
      <soundMeleeMiss>Pawn_Melee_SmallScratch_Miss</soundMeleeMiss>
    </race>
    <tradeTags>
      <li>AnimalCommon</li>
    </tradeTags>
    <tools>
      <li>
        <label>talons</label>
        <capacities>
          <li>Scratch</li>
        </capacities>
        <power>5</power>
        <cooldownTime>1.5</cooldownTime>
        <linkedBodyPartsGroup>Feet</linkedBodyPartsGroup>
      </li>
      <li>
        <label>beak</label>
        <capacities>
          <li>Bite</li>
        </capacities>
        <power>5</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>Beak</linkedBodyPartsGroup>
      </li>
      <li>
        <label>head</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>6</power>
        <cooldownTime>10</cooldownTime>
        <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
        <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
        <chanceFactor>0.8</chanceFactor>
        <surpriseAttack>
          <extraMeleeDamages>
            <li>
              <def>Stun</def>
              <amount>14</amount>
            </li>
          </extraMeleeDamages>
        </surpriseAttack>
      </li>
    </tools>
    <comps>
      <li Class="CompProperties_EggLayer">
        <eggUnfertilizedDef>EggHornbillUnfertilized</eggUnfertilizedDef>
        <eggFertilizedDef>EggHornbillFertilized</eggFertilizedDef>
        <eggFertilizationCountMax>1</eggFertilizationCountMax>
        <eggLayIntervalDays>15</eggLayIntervalDays>
        <eggCountRange>3</eggCountRange>
      </li>
    </comps>
  </ThingDef>
  <PawnKindDef ParentName="AnimalKindBase">
    <defName>BB_Hornbill</defName>
    <label>hornbill</label>
    <race>BB_Hornbill</race>
    <combatPower>30</combatPower>
    <ecoSystemWeight>1</ecoSystemWeight>
    <flyingAnimationFramePathPrefix>Things/Pawn/Animal/Hornbill/Hornbill_flight_</flyingAnimationFramePathPrefix>
    <flyingAnimationFrameCount>1</flyingAnimationFrameCount>
    <lifeStages>
      <li>
        <label>chick</label>
        <bodyGraphicData>
          <texPath>Things/Pawn/Animal/Hornbill/Hornbill</texPath>
          <drawSize>1</drawSize>
        </bodyGraphicData>
        <dessicatedBodyGraphicData>
          <texPath>Things/Pawn/Animal/Dessicated_Kestrel</texPath>
          <drawSize>1</drawSize>
        </dessicatedBodyGraphicData>
      </li>
      <li>
        <bodyGraphicData>
          <texPath>Things/Pawn/Animal/Hornbill/Hornbill</texPath>
          <drawSize>1.3</drawSize>
        </bodyGraphicData>
        <dessicatedBodyGraphicData>
          <texPath>Things/Pawn/Animal/Dessicated_Kestrel</texPath>
          <drawSize>1.3</drawSize>
        </dessicatedBodyGraphicData>
      </li>
      <li>
        <bodyGraphicData>
          <texPath>Things/Pawn/Animal/Hornbill/Hornbill</texPath>
          <drawSize>1.8</drawSize>
          <shadowData>
            <volume>(0.3, 0.4, 0.3)</volume>
            <offset>(0,0,-0.05)</offset>
          </shadowData>
        </bodyGraphicData>
        <dessicatedBodyGraphicData>
          <texPath>Things/Pawn/Animal/Dessicated_Kestrel</texPath>
          <drawSize>1.8</drawSize>
        </dessicatedBodyGraphicData>
      </li>
    </lifeStages>
  </PawnKindDef>
</Defs>
